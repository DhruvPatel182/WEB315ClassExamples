@page "{searchString?}"
@model MarvelHeros.Pages_Heros.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        <select asp-for="HeroCountryOfOrigin" asp-items="Model.CountriesOfOrigin">
            <option value="">All</option>
        </select>
        Name: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Hero[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hero[0].PowerAcquisitionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hero[0].SecretIdentity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hero[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hero[0].CountryOfOrigin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Hero) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PowerAcquisitionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecretIdentity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryOfOrigin)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
